<!DOCTYPE html>
<html lang="en">
    <%- include(`partials/head`, {title: `Inicio`}) %>
    <main class="container">
        <div class="row">
            <% for (let i=0; i<productoDetallado.length ; i++) { %>
                <div class="col-12 col-sm-8 col-md-6 col-lg-4">
                <div class="card">
                    <img class="card-img" src="../images/productos/<%= productoDetallado[i].image1 %>" alt="<%= productoDetallado[i].name %>">
                    <div class="card-img-overlay d-flex justify-content-end">
                    <a href="#" class="card-link text-danger like">
                        <i class="fas fa-heart"></i>
                    </a>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title"><%= productoDetallado[i].name %></h4>
                        <h6 class="card-subtitle mb-2 text-muted">Marca: <%= productoDetallado[i].brands.name %></h6>
                        <div class="mb-2">
                            <p class="card-text"><%= productoDetallado[i].description.substr(0,100) %></p>
                        </div>
                        <h6 class="card-subtitle mb-1 mt-2 text-muted">Categor√≠a: <%= productoDetallado[i].categories.name %></h6>
                        <div class="buy d-flex justify-content-between align-items-center">
                            <div class="price text-success">
                                <h5 class="mt-4">$ <%= productoDetallado[i].price %></h5>
                                <span class="precio-oferta"><%= productoDetallado[i].discounts.level*100 %> %</span>
                            </div>
                            <div>
                                <a href="#" class="btn btn-danger mt-3 d-block rounded-sm"><i class="fas fa-shopping-cart"></i> COMPRA</a>
                                <a href="#" class="btn btn-primary mt-3 d-block rounded-sm"><i class="fas fa-list"></i> INFO</a>
                            </div>
                        </div>
                    </div>
                </div>
                </div>
            <% } %>
        </div>
    </main>
    <%- include(`partials/footer`) %>
</body>
</html>