                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="customFileLang" lang="es">
                    <label class="custom-file-label" for="customFileLang">Seleccionar Archivo</label>
                </div>
            </div>  -->
            
        </div>    
        
        
        <!-- <div class="form-row"> 
            <div class="col-12 col-md-6 mb-6">
                <h5 class="mt-3">Confirmar contraseña</h5>
                <input type="password" class="form-control"     id="validationCustom03" placeholder="Contraseña"    required>
            </div>
        </div>     -->
        
        
        
        
    </div>
    
    <div class="button-container-submit">
        <button id="butenv" class="btn btn-bunker mb-5 mt-5" type="submit">Guardar Cambios</button>
    </div>
   
</form>

<form  action="/products/edit/<%= productToEdit.id%>?_method=DELETE" method="post"  class="product mt-3 form-ingresar-prod" novalidate>
    
    <div class="button-container-submit">
       
        <button class="btn btn-bunker mb-5 mt-5" type="submit">Borrar Producto</button>
