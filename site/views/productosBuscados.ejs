<!DOCTYPE html>
<html lang="en">
    <%- include(`partials/head`, {title: `Inicio`}) %>
    <main class="container">
        <div class="row">
            <% prductsSearch.forEach(product=> { %>
                <div class="col-12 col-sm-6 col-lg-3">
                    <section class="product-box">
                        <a href="/products/<%=product.id%>">
                            <figure class="product-box_image">
                                <img src="../images/productos/<%=product.image1%>" class="center-cropped" alt="imagen de producto">
                            </figure>
                            <article class="product-box_data">
                                <div class="precio-oferta">
                                    <h2>$<%=product.price%></h2>
                                    <span><%=product.discounts.level*100%>% OFF</span>
                                </div>
                                <p><%=product.name%><span><%=product.brand%></span></p>
                            </article>
                        </a>
                    </section>
                </div>
            <% }) %>
        </div>
    </main>
    <%- include(`partials/footer`) %>
</body>
</html>